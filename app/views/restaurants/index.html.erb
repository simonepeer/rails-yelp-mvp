<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">
    <%= link_to 'Yelp MVP', @restaurant %>
  </span>
  <%= link_to 'Create restaurant', new_restaurant_path, class: 'btn btn-primary' %>
</nav>

<div class="container">
  <div class="clearfix mt-3 mb-3">
    <h1>Restaurants</h1>
  </div>
  <div class="row">
    <% @restaurants.each do |r| %>
    <div class="col-sm-4 mb-4">
      <div class="card">
        <img src="https://source.unsplash.com/1600x900/?restaurant" width="350px">
        <div class="card-body">

          <h3 class="card-title"><%= link_to r.name, restaurant_path(r) %></h3>
          <p class="card-text">
            <strong>Address:</strong> <%= r.address %>
            <br />
            <strong>Category:</strong> <%= r.category.capitalize %>
          </p>
          <p>
            <%= link_to 'Delete', restaurant_path(r), method: :delete, data: { confirm: "Delete #{r.name}?"}, class: 'btn btn-danger' %>
          </p>
        </p>
      </div>
    </div>

  </div>
  <% end %>
</div>
</div>
